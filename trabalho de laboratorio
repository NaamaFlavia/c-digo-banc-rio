#include <stdio.h>
#include <stdbool.h>
bool ehPrimo(int n) {
    if (n < 2) return false;

    for (int i = 2; i * i <= n; i++) {
        if (n % i == 0) {
            return false; 
        }
    }
    return true; 
}
int solicitarEntrada() {
    int numero;

    do {
        printf("Digite um número inteiro positivo maior que 1: ");
        if (scanf("%d", &numero) != 1) {
            printf("Erro: entrada inválida. Por favor, digite um número inteiro.\n");
            
            while (getchar() != '\n');
            numero = 0;
        } else if (numero <= 1) {
            printf("Erro: o número deve ser maior que 1.\n");
        }
    } while (numero <= 1);

    return numero;
}
void listarPrimosMenoresQue(int numero) {
    printf("\nNúmeros primos menores que %d:\n", numero);

    for (int i = 2; i < numero; i++) {
        if (ehPrimo(i)) {
            printf("%d ", i);
        }
    }
    printf("\n"); 
}
int main() {
    int numero = solicitarEntrada();
    listarPrimosMenoresQue(numero);
    return 0;
}
